<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#a13a21"
    tools:context=".CookProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#a13a21"
            android:padding="20dp">

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/usericon" />

            <TextView
                android:id="@+id/customerProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-black"
                android:text="Cook Profile"
                android:textColor="#EAE7E7"
                android:textSize="27sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C64B2D"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cookProfFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edges"
                android:drawablePadding="10dp"
                android:hint="First Name"
                android:paddingStart="10dp"
                android:textSize="25sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cookProfLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edges"
                android:hint="Last Name "
                android:paddingStart="10dp"
                android:textSize="25sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cookProfPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edges"
                android:hint="Phone "
                android:paddingStart="10dp"
                android:textSize="25sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cookProfAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edges"
                android:hint="Address"
                android:paddingStart="10dp"
                android:textSize="25sp" />

            <Button
                android:id="@+id/cookProfUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:backgroundTint="#8d3620"
                android:text="Update"
                android:textAllCaps="false"
                android:onClick="cookUpdate"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cookProfCompleteOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:backgroundTint="#8d3620"
                android:onClick="cookCompletedOrders"
                android:text="Previous Orders" />

            <Button
                android:id="@+id/cookSignOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:backgroundTint="#8d3620"
                android:onClick="cookSignOut"
                android:text="Sign Out" />

            <Button
                android:id="@+id/cookProfBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#8d3620"
                android:textAllCaps="false"
                android:onClick="cookProfileToMain"
                android:text="Back" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>