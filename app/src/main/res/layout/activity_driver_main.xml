<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f5a65"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DriverMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edges"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edges"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:inputType="time"
            android:paddingTop="20dp"
            android:text="Driver Orders"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listMenu"
                android:layout_width="180dp"
                android:layout_height="425dp"
                android:choiceMode="multipleChoice" />

            <ListView
                android:id="@+id/listOrderItems"
                android:layout_width="match_parent"
                android:layout_height="425dp"
                android:choiceMode="multipleChoice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/startOrder"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#2f5a65"
                android:onClick="startOrder"
                android:text="Start Order"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/endOrder"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:backgroundTint="#2f5a65"
                android:insetLeft="0dp"
                android:onClick="endOrder"
                android:text="End Order"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/driverOrderDetailsButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#2f5a65"
                android:insetLeft="0dp"
                android:onClick="driverOrderDetails"
                android:text="Order Details"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:backgroundTint="#2f5a65"
                android:onClick="profileButtonEvent"
                android:text="Profile"
                android:textAllCaps="false" />

        </LinearLayout>

        <Button
            android:id="@+id/NavigateCook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#2f5a65"
            android:onClick="navigateCook"
            android:text="Navigate to Cook"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/navigateCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#2f5a65"
            android:onClick="navigateCustomer"
            android:text="Navigate to Customer"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>

